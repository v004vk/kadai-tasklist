<h1>id : <%= @task.id %> のタスク詳細ページ</h1>

<table class="table table-bordered">
  <tbody>
    <tr>
      <th>id</th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th>タスク</th>
      <td><%= @task.content %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @task.status %></td>
    </tr>
  </tbody>
</table>

<%= link_to '編集する', edit_task_path(@task), class: 'btn btn-light' %>
<%= link_to '削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger'%>